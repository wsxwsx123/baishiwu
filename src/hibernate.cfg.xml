<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/contact</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
         <property name="connection.username">root</property>
         <property name="connection.password">111111</property>

        <mapping class="com.cdvtc.contact.data.Admin"/>
        <mapping class="com.cdvtc.contact.data.ClassInfo"/>
        <mapping class="com.cdvtc.contact.data.Contact"/>
        <mapping class="com.cdvtc.contact.data.TbAdministrator"/>
        <mapping class="com.cdvtc.contact.data.TbAnswer"/>
        <mapping class="com.cdvtc.contact.data.TbRecordsconsumption"/>
        <mapping class="com.cdvtc.contact.data.TbUser"/>
        <mapping class="com.cdvtc.contact.data.TbUsershow"/>
        <mapping class="com.cdvtc.contact.data.TbUsertask"/>
        <mapping class="com.cdvtc.contact.data.TbWechatuserfollow"/>

        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>